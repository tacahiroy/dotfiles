" $HOME/.gvimrc
" Author: Tacahiroy <tacahiroy```AT```gmail.com>

scriptencoding utf-8

if $PATH !~# expand('$HOME/.rbenv/shims')
  let $PATH = expand('$HOME/.rbenv/shims:$PATH')
endif

set cmdheight=2
set columns=132
set guioptions=aeciM
set guitablabel=%N)\ %f
set lines=100

set t_vb=

set mouse=a
set nomousefocus
set mousehide

nnoremap <C-LeftMouse> <C-]>zz
nnoremap <C-RightMouse> <C-t>zz


if &guioptions =~# 'M'
  let &guioptions = substitute(&guioptions, '[mT]', '', 'g')
endif


set background=light
" colorscheme solarized
colorscheme seashell

if has('macunix')
  " set guifont=Monaco:h12
  set guifont=Menlo\ Regular:h12
  set antialias

  set fuoptions& fuoptions+=maxhorz
elseif has('unix')
  set guifont=M+1VM+IPAG\ circle\ 10
else
  " Windows
  set guifont=M+1VM+IPAG_circle:h10:cDEFAULT
endif

if has('multi_byte_ime') || has('xim')
  set iminsert=0 imsearch=0
endif


" printing font
if has('printer')
  if has('win32') || has('win64')
    let &printfont = &guifont
  endif
endif

" __END__ {{{
" vim: ts=2 sts=2 sw=2 fdm=marker

