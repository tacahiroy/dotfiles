; vim: ts=4 sw=4 sts=4 noexpandtab
[include]
[color]
	diff = auto
	branch = auto
	ui = auto
	status = auto
	interactive = auto
[core]
	editor = ${EDITOR:-vim}
	pager = ${PAGER:-less}
	excludesfile = ~/.gitignore

[alias]
	b    = branch
	ci   = commit
	ca   = commit --amend
	co   = checkout
	d    = diff
	dc   = diff --cached
	hide = stash
	l    = log
	logc = log ORIG_HEAD.. --stat --no-merges
	logg = log --graph --pretty=oneline --abbrev-commit
	logo = log --pretty=oneline --abbrev-commit
	logs = log --stat
	ra   = rebase --abort
	rc   = rebase --continue
	ri   = rebase -i
	s    = status -sb
	spo  = stash pop
	st   = status
	sup  = !git stash && git up
	up   = pull --rebase

[pager]
	log  = (perl ~/bin/diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	show = (perl ~/bin/diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	diff = (perl ~/bin/diff-highlight 2>/dev/null || cat) | ${PAGER:-less}

[interactive]
	diffFilter = (diff-highlight 2>/dev/null || cat)
[diff]
	compactionHeuristic = true
	mnemonicprefix = true

[push]
	default = simple

[credential]
	helper = cache
[advice]
	statusHints = false
[help]
	autocorrect = 1
