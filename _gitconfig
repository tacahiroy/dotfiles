; vim: ts=4 sw=4 sts=4 noexpandtab
[include]
[color]
	diff = auto
	branch = auto
	ui = auto
	status = auto
	interactive = auto
[core]
	editor = $EDITOR
	pager = $PAGER
	excludesfile = ~/.gitignore

[alias]
	b    = branch
	ci   = commit
	co   = checkout
	d    = diff
	dc   = diff --cached
	hide = stash
	l    = log
	logc = log ORIG_HEAD.. --stat --no-merges
	logg = log --graph --pretty=oneline --abbrev-commit
	logo = log --pretty=oneline --abbrev-commit
	logs = log --stat
	ra   = rebase --abort
	rc   = rebase --continue
	ri   = rebase -i
	s    = status -sb
	spo  = stash pop
	st   = status
	sup  = !git stash && git up
	up   = pull --rebase

[advice]
	statusHints = false

[push]
	default = simple
[help]
	autocorrect = 1
[diff]
	mnemonicprefix = true
