	excludesfile = ~/.gitmine/gitignore

[alias]
	ci = commit
	co = checkout
	s = status
	st = status
	d = diff
	b = branch
	l = log
	logo = log --pretty=oneline --abbrev-commit
	logg = log --graph --pretty=oneline --abbrev-commit
	logs = log --stat
	logc = log ORIG_HEAD.. --stat --no-merges
	up = pull --rebase

[advice]
	statusHints = false

