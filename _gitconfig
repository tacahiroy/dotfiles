; vim: ts=4 sw=4 sts=4 noexpandtab
[include]
	; path = ~/.gitlocal/gitconfig.mbp
[color]
	diff = auto
	branch = auto
	ui = auto
	status = auto
	interactive = auto
[core]
	editor = $EDITOR
	pager = $PAGER
	excludesfile = ~/.gitignore

[alias]
	ci = commit
	co = checkout
	s = status -sb
	st = status
	d = diff
	dc = diff --cached
	b = branch
	l = log
	logo = log --pretty=oneline --abbrev-commit
	logg = log --graph --pretty=oneline --abbrev-commit
	logs = log --stat
	logc = log ORIG_HEAD.. --stat --no-merges
	up = pull --rebase
	hide = stash
	unhide = stash pop
	staup = !git stash && git up

[advice]
	statusHints = false

[push]
	default = simple
[help]
	autocorrect = 1
[diff]
	mnemonicprefix = true
