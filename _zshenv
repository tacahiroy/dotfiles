export LANG=ja_JP.UTF-8

fpath=($fpath $HOME/.zsh/func)
typeset -U fpath


## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export RUBYOPT=-rubygems
export GEM_HOME=/usr/local/Cellar/gems/1.9
export TERM=xterm-256color
# colorize
export LV='-c'

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  /usr/local/bin(N-/)
  $path
)

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
)

source ~/.zshrc

