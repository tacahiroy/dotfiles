export LANG=ja_JP.UTF-8

HISTFILE=~/.zhistory

fpath=(/usr/local/opt/zsh-completions/share/zsh-completions/(N-/) \
       $HOME/.zsh/functions \
       $HOME/.zsh/vendor \
       $fpath)
typeset -U fpath

# tmux-powerline
case "${OSTYPE}" in
  freebsd*|darwin*)
    export PLATFORM="mac"
    ;;
  *)
    export PLATFORM="linux"
    ;;
esac
export USE_PATCHED_FONT="false"

## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export TERM=xterm-256color
# colourize
if [[ -x `which lv` ]]; then
  export PAGER='lv'
  export LV='-c'
else
  export PAGER='less'
fi

# Rubinius
export RBXOPT='-X19'

# environment variables
export proj=~/Projects
export fc=~/Projects/Fc
export fsm=~/Projects/Fc/scm
export chef=~/Projects/Fc/chef.git


if [ -x /usr/local/opt/macvim/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR=/usr/local/opt/macvim/MacVim.app/Contents/MacOS/Vim
else
  export EDITOR='/usr/bin/vim'
fi

## path
typeset -U path
path=(
  $HOME/.rbenv/shims(N-/)
  $HOME/.pyenv/shims(N-/)
  $HOME/bin(N-/)
  $HOME/perl5/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  $path
)

export ANDROID_HOME=/usr/local/opt/android-sdk

