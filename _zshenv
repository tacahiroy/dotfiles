export LANG=ja_JP.UTF-8

fpath=($HOME/.zsh/func $fpath)
typeset -U fpath


## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export RUBYOPT=-rubygems
# export GEM_HOME=/usr/local/Cellar/gems/1.9
export TERM=xterm-256color
# colorize
if [[ -x `which lv` ]]; then
  export PAGER='lv'
  export LV='-c'
else
  export PAGER='less'
fi
export EDITOR='vim'

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  /usr/local/bin(N-/)
  /usr/local/Cellar/android-sdk/r18/platform-tools(N-/)
  $GEM_HOME/bin(N-/)
  $path
)

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
)

## Python
typeset -xT PYTHONPATH python_path
typeset -U python_path

python_path=(
  /usr/local/lib/python2.7/site-packages
)

## Clojure
typeset -xT CLASSPATH class_path
typeset -U class_path
class_path=(
  /usr/local/Cellar/clojure/1.4.0/*.jar(N-/)
  /usr/local/Cellar/clojure-contrib/1.2.0/*.jar(N-/)
  $HOME/Projects/wk/vimclojure.hg/build/libs/*.jar(N-/)
  $HOME/Projects/wk/vimclojure.hg/server/build/libs/*.jar(N-/)
)

export LEIN_JAR=$HOME/.lein/self-installs/leiningen-1.7.1-standalone.jar
export CLOJURE_JAR=/usr/local/Cellar/clojure/1.4.0/clojure-1.4.0.jar

export NODE_PATH=/usr/local/lib/node_modules

