export LANG=ja_JP.UTF-8

fpath=($HOME/.zsh/func $fpath)
typeset -U fpath

# tmux-powerline
case "${OSTYPE}" in
  freebsd*|darwin*)
    export PLATFORM="mac"
    ;;
  *)
    export PLATFORM="linux"
    ;;
esac
export USE_PATCHED_FONT="false"

## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export TERM=xterm-256color
# colourize
if [[ -x `which lv` ]]; then
  export PAGER='lv'
  export LV='-c'
else
  export PAGER='less'
fi

if [ -x $HOME/Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR=$HOME/Applications/MacVim.app/Contents/MacOS/Vim
elif [ -x /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR='/Applications/MacVim.app/Contents/MacOS/Vim'
else
  export EDITOR='/usr/bin/vim'
fi

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  /usr/local/bin(N-/)
  /usr/local/Cellar/android-sdk/r18/platform-tools(N-/)
  $path
)

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
)

## Perl
typeset -xT PERL5LIB perl5_lib
typeset -U perl5_lib

perl5_lib=(
  $HOME/perl5(N-/)
)

## Python
typeset -xT PYTHONPATH python_path
typeset -U python_path

python_path=(
/usr/local/lib/python2.7/site-packages(N-/)
)

## Clojure
typeset -xT CLASSPATH class_path
typeset -U class_path
class_path=(
  /usr/local/Cellar/clojure/1.4.0/*.jar(N-/)
  /usr/local/Cellar/clojure-contrib/1.2.0/*.jar(N-/)
  $HOME/Projects/wk/vimclojure.hg/build/libs/*.jar(N-/)
  $HOME/Projects/wk/vimclojure.hg/server/build/libs/*.jar(N-/)
)

export LEIN_JAR=$HOME/.lein/self-installs/leiningen-1.7.1-standalone.jar
export CLOJURE_JAR=/usr/local/Cellar/clojure/1.4.0/clojure-1.4.0.jar

export NODE_PATH=/usr/local/lib/node_modules

if [[ -x `which rbenv` ]]; then
  eval "$(rbenv init -)"
fi

if [ -f ~/.zsh.local ]; then
  source ~/.zsh.local
fi

