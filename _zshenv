export LANG=ja_JP.UTF-8

HISTFILE=~/.zhistory

fpath=(/usr/local/share/zsh-completions(N-) \
       $HOME/.zsh/func \
       $fpath)
typeset -U fpath

if [ -f $HOME/.zsh/func/utils.zsh ]; then
  source $HOME/.zsh/func/utils.zsh
fi

# tmux-powerline
case "${OSTYPE}" in
  freebsd*|darwin*)
    export PLATFORM="mac"
    ;;
  *)
    export PLATFORM="linux"
    ;;
esac
export USE_PATCHED_FONT="false"

## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export TERM=xterm-256color
# colourize
if [[ -x `which lv` ]]; then
  export PAGER='lv'
  export LV='-c'
else
  export PAGER='less'
fi

# Rubinius
export RBXOPT='-X19'

# environment variables
export proj=~/Projects/
export fc=~/Projects/Fc/
export chef=~$fc/chef.git/


if [ -x $HOME/Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR=$HOME/Applications/MacVim.app/Contents/MacOS/Vim
elif [ -x /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR='/Applications/MacVim.app/Contents/MacOS/Vim'
else
  export EDITOR='/usr/bin/vim'
fi

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  $HOME/perl5/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  $HOME/Applications/adt-bundle/sdk/platform-tools(N-/)
  $path
)

# if [ -d ${HOME}/.rbenv  ] ; then
#   # export PATH="${HOME}/.rbenv/bin:${HOME}/.rbenv/shims:${PATH}"
#   # PATH=${HOME}/.rbenv/shims:${PATH}
#   eval "$(rbenv init - zsh)"
# fi

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
  $HOME/lib/ruby(N-/)
)

## Perl
typeset -xT PERL5LIB perl5_lib
typeset -U perl5_lib

perl5_lib=(
  $HOME/perl5/lib/perl5(N-/)
)

if [ -f ~/.zshrc.local ]; then
  source ~/.zshrc.local
fi

