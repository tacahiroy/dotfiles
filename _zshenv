export LANG=ja_JP.UTF-8

fpath=($HOME/.zsh/func $fpath)
typeset -U fpath

# tmux-powerline
case "${OSTYPE}" in
  freebsd*|darwin*)
    export PLATFORM="mac"
    ;;
  *)
    export PLATFORM="linux"
    ;;
esac
export USE_PATCHED_FONT="false"

## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export TERM=xterm-256color
# colourize
if [[ -x `which lv` ]]; then
  export PAGER='lv'
  export LV='-c'
else
  export PAGER='less'
fi

# Rubinius
export RBXOPT='-X19'

# environment variables
export proj=~/Projects/
export fc=~/Projects/Fc/
export chef=~/Projects/fc/chef.git/


if [ -x $HOME/Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR=$HOME/Applications/MacVim.app/Contents/MacOS/Vim
elif [ -x /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  export EDITOR='/Applications/MacVim.app/Contents/MacOS/Vim'
  export GEDITOR='/Applications/MacVim.app '
else
  export EDITOR='/usr/bin/vim'
  export GEDITOR='/usr/bin/gvim'
fi

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  /usr/local/bin(N-/)
  /usr/local/share/python(N-/)
  /usr/local/Cellar/android-sdk/r18/platform-tools(N-/)
  $path
)

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
  $HOME/lib/ruby(N-/)
)

## Perl
typeset -xT PERL5LIB perl5_lib
typeset -U perl5_lib

perl5_lib=(
  $HOME/perl5(N-/)
)

## Python
typeset -xT PYTHONPATH python_path
typeset -U python_path

python_path=(
/usr/local/lib/python2.7/site-packages(N-/)
)

export NODE_PATH=/usr/local/lib/node_modules

if [[ -x `which rbenv` ]]; then
  eval "$(rbenv init - zsh)"
fi

if [ -f ~/.zshrc.local ]; then
  source ~/.zshrc.local
fi

