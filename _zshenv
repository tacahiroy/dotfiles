export LANG=ja_JP.UTF-8

fpath=($fpath $HOME/.zsh/func)
typeset -U fpath


## Environment variable configuration
#
# LANG
#
# export LANG=ja_JP.UTF-8
export RUBYOPT=-rubygems
export GEM_HOME=/usr/local/Cellar/gems/1.9
export TERM=xterm-256color
# colorize
export LV='-c'

## path
typeset -U path
path=(
  $HOME/bin(N-/)
  /usr/local/bin(N-/)
  /usr/local/sbin(N-/)
  /usr/local/bin(N-/)
  /usr/local/Cellar/android-sdk/r13/tools(N-/)
  /usr/local/Cellar/android-sdk/r13/platform-tools(N-/)
  $path
)

## Ruby
typeset -xT RUBYLIB ruby_path
typeset -U ruby_path

ruby_path=(
  ./lib(N-/)
)

## Python
typeset -xT PYTHONPATH python_path
typeset -U python_path

python_path=(
  /usr/local/lib/python2.7/site-packages
)

## Clojure
typeset -xT CLASSPATH class_path
typeset -U class_path
class_path=(
  /usr/local/Cellar/clojure/1.3.0/*.jar
  /usr/local/Cellar/clojure-contrib/1.2.0/*.jar
  $HOME/Projects/wk/vimclojure.hg/build/libs/*.jar
  $HOME/Projects/wk/vimclojure.hg/server/build/libs/*.jar
)

