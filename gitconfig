; vim: ts=4 sw=4 sts=4 noexpandtab
[include]
	path = /c/Users/tacahiroy/.gitlocal/gitconfig
[user]
	name = Takahiro Yoshihara
[color]
	diff = auto
	branch = auto
	ui = auto
	status = auto
	interactive = auto
[core]
	editor = ${EDITOR:-vim}
	pager = ${PAGER:-less}
	excludesfile = ~/.gitignore
	bigFileThreshold = 256m
	compression = 0
	losecompression = 0

[alias]
	b    = branch
	ba   = branch --all
	find = branch --contains
	ci   = commit
	ca   = commit --amend
	co   = checkout
	d    = diff
	dc   = diff --cached
	dno  = diff --name-only
	hide = stash
	l    = log
	logc = log ORIG_HEAD.. --stat --no-merges
	# https://coderwall.com/p/euwpig/a-better-git-log
	logg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset - %C(bold blue)%an%Creset' --abbrev-commit
	loga = log --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset - %C(bold blue)%an%Creset' --abbrev-commit
	logo = log --pretty=oneline --abbrev-commit
	logs = log --stat
	puta = push --tags
	ra   = rebase --abort
	rc   = rebase --continue
	ri   = rebase -i
	s    = status -sb
	sno  = status -sb -uno
	spo  = stash pop
	st   = status
	sup  = !git stash && git up
	up   = pull --rebase
	fep  = fetch --prune
	fea  = fetch --all
	fet  = fetch --tags
	merge-log = !sh -c 'git log --stat $1^..$1' -
	mt = mergetool

[pager]
	log  = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	show = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	diff = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}

[interactive]
	diffFilter = (diff-highlight 2>/dev/null || cat)
[diff]
	compactionHeuristic = true
	mnemonicprefix = true
	renameLimit = 15000
[merge]
	tool = vimdiff
	renameLimit = 15000

[push]
	default = current

[credential]
	helper = cache
[advice]
	statusHints = false
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
