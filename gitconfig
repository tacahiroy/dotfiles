; vim: ts=4 sw=4 sts=4 noexpandtab
[include]
[color]
	diff = auto
	branch = auto
	ui = auto
	status = auto
	interactive = auto
[core]
	editor = ${EDITOR:-vim}
	pager = ${PAGER:-less}
	excludesfile = ~/.gitignore
	bigFileThreshold = 256m
	compression = 0
	losecompression = 0

[alias]
	b    = branch
	ci   = commit
	ca   = commit --amend
	co   = checkout
	d    = diff
	dc   = diff --cached
	hide = stash
	l    = log
	logc = log ORIG_HEAD.. --stat --no-merges
	# https://coderwall.com/p/euwpig/a-better-git-log
	logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	logo = log --pretty=oneline --abbrev-commit
	logs = log --stat
	ra   = rebase --abort
	rc   = rebase --continue
	ri   = rebase -i
	s    = status -sb
	spo  = stash pop
	st   = status
	sup  = !git stash && git up
	up   = pull --rebase
	merge-log = !sh -c 'git log --stat $1^..$1' -

[pager]
	log  = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	show = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
	diff = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}

[interactive]
	diffFilter = (diff-highlight 2>/dev/null || cat)
[diff]
	compactionHeuristic = true
	mnemonicprefix = true

[push]
	default = simple

[credential]
	helper = cache
[advice]
	statusHints = false
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[ghq]
	root = /home/tacahiroy/proj
